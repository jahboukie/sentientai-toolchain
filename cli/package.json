{
  "name": "@sentient/cli",
  "version": "1.0.0",
  "description": "Sentient CLI - AI Agent Toolkit",
  "main": "dist/index.js",
  "bin": {
    "sentient": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc --skipLibCheck && npm run copy-assets",
    "copy-assets": "xcopy /E /I /Y src\\database\\*.sql dist\\database\\ 2>nul || echo \"Assets copied\"",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist node_modules",
    "check": "npm run lint && npm run format:check && npm run type-check && npm run test"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "better-sqlite3": "^9.6.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.10",
    "winston": "^3.10.0",
    "glob": "^11.0.0",
    "fs-extra": "^11.1.1",
    "yaml": "^2.3.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "llm",
    "automation",
    "development"
  ],
  "author": "Sentient Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}